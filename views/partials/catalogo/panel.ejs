<div class="panel lateral izq">
    <div class="panel-section acordeon cuenta">
        <div class="operaciones">
            <div class="item login wrap col">
                <a href="/ingresar" class="wrap">
                    <img src="/images/icons/catalogo/user-solid.png" class="menu-icon" id="iconGris" alt="">  
                    <% if (user.tipo == 'cliente'){ %>
                        <h3>Panel de cliente</h3>
                    <% } 
                    else { %>
                        <h3>Ingresar</h3>
                    <% } %> 
                </a>
            </div>
        </div>
        <div class="operaciones grid">
            <div class="item wrap">
                <p>Tamaño de artículos</p>
                <img src="/images/icons/catalogo/th-solid-2.png" id="th-2" alt="">
                <img src="/images/icons/catalogo/th-solid-3.png" id="th-3" alt="">
                <img src="/images/icons/catalogo/th-solid-4.png" id="th-4" alt="">
            </div>
        </div>
        <div class="operaciones nuevos">
            <div class="item wrap">
                <img src="/images/icons/catalogo/certificate-solid.png" class="menu-icon" alt="">
                <a href="/catalogo/filtro?filter=destacados">Solo <b>destacados</b></a>
            </div>
            <div class="item wrap">
                <img src="/images/icons/catalogo/history-solid.png" class="menu-icon" alt="">
                <a href="/catalogo/filtro?filter=nuevos">Solo <b>nuevos</b></a>
            </div>
        </div>
        <div class="panel-section acordeon indice">
            <div class="item wrap col">
                <input type="checkbox" name="" id="lineas" checked>
                <% if (lineas[0] != '') { %>
                <label class="wrap" id="tituloSec" for="lineas">Lineas</label>
                <% } %>
                <div class="contenido wrap">
                    <div class="list-group-item checkbox">
                        <% for (const linea of lineas) { %>
                        <a href="/catalogo/filtro?filter=linea&param=<%= linea.id %>"><%= linea.nombre %></a>
                        <% }  %>
                    </div>
                </div>
            </div>
            <div class="item wrap col">
                <input type="checkbox" name="" id="categorias">
                <% if (rubros[0] != '') { %>
                <label class="" id="tituloSec" for="categorias">Rubros</label>
                <% } %>
                <div class="contenido wrap">
                    <div class="list-group-item checkbox">
                        <% for (const rubro of rubros) { %>
                        <a href="/catalogo/filtro?filter=rubro&param=<%= rubro.nombre %>"><%= rubro.nombre %></a>
                        <% }  %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>